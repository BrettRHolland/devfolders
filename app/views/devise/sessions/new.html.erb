<div class="devise-container">  
  <div class="devise-photo-container"></div>  
  <div class="devise-form-container">
    
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% elsif notice %>
      <p class="alert alert-primary"><%= notice %></p>
    <% end %>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "devise-form"}) do |f| %>
    <h1 class="devise-form-title">Login</h1>
    
    <div class="devise-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email..." %>
    </div>
    
    <div class="devise-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password..." %>
    </div>
    
    <% if devise_mapping.rememberable? -%>
    <div class="devise-field-checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "checkbox-label" %>
    </div>
    <% end -%>
    
    <%= f.submit "Log in", class: "button button-default" %>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
  
</div>